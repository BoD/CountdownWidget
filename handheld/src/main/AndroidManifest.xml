<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.jraf.android.countdownwidget"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="internalOnly"
    tools:ignore="MissingVersion">

    <uses-sdk tools:overrideLibrary="android.support.v14.preference, timber.log" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".handheld.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <!-- Meta data for Crashlytics -->
        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="439fd08746c1c52a7eb5e9fe0d2e0b631861d890" />

        <!-- AppWidget -->
        <receiver
            android:name=".handheld.app.appwidget.AppWidgetProvider"
            android:label="@string/appwidget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget" />
        </receiver>

        <!-- Settings -->
        <activity
            android:name=".handheld.app.settings.SettingsActivity"
            android:icon="@drawable/ic_launcher"
            android:label="@string/appwidget_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Android Wear Notification Service -->
        <service android:name=".handheld.app.androidwear.UpdateWearNotificationService" />

        <!-- Android Wear Notification Task Service -->
        <service
            android:name=".handheld.app.androidwear.UpdateWearNotificationTaskService"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>

        <!-- About -->
        <activity
            android:name="org.jraf.android.util.about.AboutActivity"
            android:label="@string/about_title" />

    </application>

</manifest>