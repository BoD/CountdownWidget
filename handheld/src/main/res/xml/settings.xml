<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="PREF_TUTORIAL"
        android:title="@string/preference_tutorial" />

    <ListPreference
        android:entries="@array/country_labels"
        android:entryValues="@array/country_values"
        android:key="PREF_COUNTRY"
        android:defaultValue="@string/preference_default_country"
        android:title="@string/preference_country_title" />

    <android.support.v7.preference.SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="PREF_ANDROID_WEAR"
        android:summary="@string/preference_androidWear_summary"
        android:title="@string/preference_androidWear_title" />

    <Preference
        android:key="PREF_SHARE"
        android:title="@string/preference_share" />

    <Preference
        android:key="PREF_ABOUT"
        android:title="@string/preference_about" />
</PreferenceScreen>